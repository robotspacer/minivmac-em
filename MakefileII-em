# make file generated by gryphel build system
CC = emcc

ifeq ($(EMSCRIPTEN_ROOT),)
#Set it yourself if EMSCRIPTEN_ROOT not there
	EMSCRIPTEN_ROOT=c:/emsdk/emscripten/1.38.12
endif

#WebAssembly seemed to be a bit faster than asm.js
WASM=1

#Set maximum RAM that Emscripten use (in bytes).
EMSCRIPTEN_TOTAL_MEMORY=67108864

TARGET = minivmacII.bc

mk_COptionsCommon = -c -Wall -Wmissing-prototypes -Wno-uninitialized -Wundef -Wstrict-prototypes -IcfgII/ -Isrc/
mk_COptionsOSGLU = $(mk_COptionsCommon) -O3
mk_COptions = $(mk_COptionsCommon) -O3

mk_COptions += -s USE_SDL=2
LIBS = -lm 

ifeq ($(EMULARITY), 1)
	mk_COptions	+= -DUSE_EMULARITY_MVMACDIR
endif

.PHONY: TheDefaultOutput clean

TheDefaultOutput : $(TARGET)

bld/OSGLUSD2.o : src/OSGLUSD2.c src/STRCNENG.h cfgII/STRCONST.h src/INTLCHAR.h src/COMOSGLU.h src/CONTROLM.h cfgII/CNFGGLOB.h
	$(CC) "src/OSGLUSD2.c" -o "bld/OSGLUSD2.o" $(mk_COptions)
bld/GLOBGLUE.o : src/GLOBGLUE.c cfgII/CNFGGLOB.h
	$(CC) "src/GLOBGLUE.c" -o "bld/GLOBGLUE.o" $(mk_COptions)
bld/M68KITAB.o : src/M68KITAB.c cfgII/CNFGGLOB.h
	$(CC) "src/M68KITAB.c" -o "bld/M68KITAB.o" $(mk_COptions)
bld/MINEM68K.o : src/MINEM68K.c src/FPMATHEM.h src/FPCPEMDV.h cfgII/CNFGGLOB.h
	$(CC) "src/MINEM68K.c" -o "bld/MINEM68K.o" $(mk_COptions)
bld/VIAEMDEV.o : src/VIAEMDEV.c cfgII/CNFGGLOB.h
	$(CC) "src/VIAEMDEV.c" -o "bld/VIAEMDEV.o" $(mk_COptions)
bld/VIA2EMDV.o : src/VIA2EMDV.c cfgII/CNFGGLOB.h
	$(CC) "src/VIA2EMDV.c" -o "bld/VIA2EMDV.o" $(mk_COptions)
bld/IWMEMDEV.o : src/IWMEMDEV.c cfgII/CNFGGLOB.h
	$(CC) "src/IWMEMDEV.c" -o "bld/IWMEMDEV.o" $(mk_COptions)
bld/SCCEMDEV.o : src/SCCEMDEV.c cfgII/CNFGGLOB.h
	$(CC) "src/SCCEMDEV.c" -o "bld/SCCEMDEV.o" $(mk_COptions)
bld/RTCEMDEV.o : src/RTCEMDEV.c cfgII/CNFGGLOB.h
	$(CC) "src/RTCEMDEV.c" -o "bld/RTCEMDEV.o" $(mk_COptions)
bld/ROMEMDEV.o : src/ROMEMDEV.c cfgII/CNFGGLOB.h
	$(CC) "src/ROMEMDEV.c" -o "bld/ROMEMDEV.o" $(mk_COptions)
bld/SCSIEMDV.o : src/SCSIEMDV.c cfgII/CNFGGLOB.h
	$(CC) "src/SCSIEMDV.c" -o "bld/SCSIEMDV.o" $(mk_COptions)
bld/SONYEMDV.o : src/SONYEMDV.c cfgII/CNFGGLOB.h
	$(CC) "src/SONYEMDV.c" -o "bld/SONYEMDV.o" $(mk_COptions)
bld/SCRNEMDV.o : src/SCRNEMDV.c cfgII/CNFGGLOB.h
	$(CC) "src/SCRNEMDV.c" -o "bld/SCRNEMDV.o" $(mk_COptions)
bld/VIDEMDEV.o : src/VIDEMDEV.c cfgII/CNFGGLOB.h
	$(CC) "src/VIDEMDEV.c" -o "bld/VIDEMDEV.o" $(mk_COptions)
bld/MOUSEMDV.o : src/MOUSEMDV.c cfgII/CNFGGLOB.h
	$(CC) "src/MOUSEMDV.c" -o "bld/MOUSEMDV.o" $(mk_COptions)
bld/ADBEMDEV.o : src/ADBEMDEV.c cfgII/CNFGGLOB.h
	$(CC) "src/ADBEMDEV.c" -o "bld/ADBEMDEV.o" $(mk_COptions)
bld/ASCEMDEV.o : src/ASCEMDEV.c cfgII/CNFGGLOB.h
	$(CC) "src/ASCEMDEV.c" -o "bld/ASCEMDEV.o" $(mk_COptions)
bld/PROGMAIN.o : src/PROGMAIN.c cfgII/CNFGGLOB.h
	$(CC) "src/PROGMAIN.c" -o "bld/PROGMAIN.o" $(mk_COptions)

ObjFiles = \
	bld/MINEM68K.o \
	bld/OSGLUSD2.o \
	bld/GLOBGLUE.o \
	bld/M68KITAB.o \
	bld/VIAEMDEV.o \
	bld/VIA2EMDV.o \
	bld/IWMEMDEV.o \
	bld/SCCEMDEV.o \
	bld/RTCEMDEV.o \
	bld/ROMEMDEV.o \
	bld/SCSIEMDV.o \
	bld/SONYEMDV.o \
	bld/SCRNEMDV.o \
	bld/VIDEMDEV.o \
	bld/MOUSEMDV.o \
	bld/ADBEMDEV.o \
	bld/ASCEMDEV.o \
	bld/PROGMAIN.o \

$(TARGET) : $(ObjFiles)
	$(CC) \
		-r -o "$(TARGET)" \
		$(ObjFiles) $(LIBS)

clean :
	rm -f $(ObjFiles)
	rm -f "$(TARGET)"
	rm -f $(basename $(TARGET)).html
	rm -f $(basename $(TARGET)).js
	rm -f $(basename $(TARGET)).js.orig.js
	rm -f $(basename $(TARGET)).wasm

html: $(TARGET)
ifeq ($(PRELOAD), 1)
	$(CC) -O3 \
	-s USE_SDL=2 \
	-s WASM=$(WASM) \
	-s TOTAL_MEMORY=$(EMSCRIPTEN_TOTAL_MEMORY) \
	-s EMTERPRETIFY=1 \
	-s EMTERPRETIFY_ASYNC=1 \
	-s EMTERPRETIFY_WHITELIST=@em.txt \
	$(TARGET) \
	--preload-file $(PREFILE) \
	--profiling-funcs \
	-o $(basename $(TARGET)).html 
else
	$(CC) -O3 \
	-s USE_SDL=2 \
	-s WASM=$(WASM) \
	-s TOTAL_MEMORY=$(EMSCRIPTEN_TOTAL_MEMORY) \
	-s EMTERPRETIFY=1 \
	-s EMTERPRETIFY_ASYNC=1 \
	-s EMTERPRETIFY_WHITELIST=@em.txt \
	$(TARGET) \
	--profiling-funcs \
	-o $(basename $(TARGET)).html 
endif
